<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDD835"
    >
    <ProgressBar

        android:id="@+id/progressBar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:indeterminate="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <include
            layout="@layout/chamcong"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <include
            layout="@layout/cham_xem_cong_nhanvien"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivImageViewer"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:layout_marginTop="4dp"
                android:adjustViewBounds="false"
                android:background="#ff99aa"
                android:visibility="gone"
                />

        </LinearLayout>


        <include
            layout="@layout/quanlynhanvien"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--<include-->
            <!--layout="@layout/login"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->

        <RelativeLayout
            android:paddingTop="10dp"
            android:background="@drawable/border"
            android:layout_height="90dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            >

            <TextView
                android:paddingLeft="10dp"
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/open_device"
                android:textSize="15sp" />

                <Button
                    android:background="@drawable/custom_button_cancel"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/button_cancel_add_vantay"
                    android:layout_gravity="center"
                    android:textColor="#0A0A0A"
                    android:text="Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Button
                    android:background="@drawable/custom_button_cancel"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/button_chamcong_vantay"
                    android:layout_gravity="center"
                    android:textColor="#0A0A0A"
                    android:text="Bắt đầu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
