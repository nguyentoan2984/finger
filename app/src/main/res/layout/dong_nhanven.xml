<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

    <TextView
        android:paddingTop="5dp"
        android:id="@+id/txt_name_nhanvien_custom"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ho ten nhan vien"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"
        />
    <TextView
        android:textStyle="bold"
        android:id="@+id/txt_mnv_nhanvien_custom"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:layout_below="@+id/txt_name_nhanvien_custom"
        android:text="ma nhan vien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:textStyle="bold"
        android:paddingTop="5dp"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_vantay_nhanvien_custom"
        android:text="Lấy Vân Tay"
        android:textColor="@color/colorPrimaryDark"
        />
    <ImageView
        android:id="@+id/imgAdd_vantay_custom"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txt_vantay_nhanvien_custom"
        app:srcCompat="@drawable/ic_launcher_foreground"
        android:layout_width="100dp"
        android:layout_height="50dp"
        />
</RelativeLayout>